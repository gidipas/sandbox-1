{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ClusterPrefix": {
      "type": "string",
      "defaultValue": "wekahost",
      "metadata": {
        "description": "The name of the cluster nodes"
      }
    },
    "WekaVMsku": {
      "type": "string",
      "defaultValue": "Standard_HC44rs",
      "allowedValues": [
        "Standard_HC44rs"
      ],
      "metadata": {
        "description": "Instance type to use for the compute nodes"
      }
    },
    "imageSelection": {
      "type": "string",
      "defaultValue": "stock",
      "allowedValues": [
        "stock",
        "custom"
      ],
      "metadata": {
        "description": "select whether to install from a custom or stock image"
      }
    },
    "LoginVMsku": {
      "type": "string",
      "defaultValue": "Standard_F8",
      "allowedValues": [
        "Standard_F4",
        "Standard_F8",
        "Standard_F16"
      ],
      "metadata": {
        "description": "sku to use for the NIS Server VM"
      }
    },
    "imageResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Resource group of the customized disk image"
      }
    },
    "imageName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the customized disk image"
      }
    },
    "WekaNodeCount": {
      "type": "int",
      "metadata": {
        "description": "Number of VM instances for Weka Host Scaleset (100 or less)."
      },
      "defaultValue": 8,
      "maxValue": 100
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Authentication type for the virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Admin password for the virtual machines"
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH public key that will be included on all nodes. The OpenSSH public key can be generated with tools like ssh-keygen on Linux or OS X."
      }
    },
    "existingVNetName": {
      "type": "string",
      "defaultValue": "POC-Network",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "existingVNetResourceGroup": {
      "type": "string",
       "defaultValue": "POC-ResourceGroup",
      "metadata": {
        "description": "name of Resource Group for existing Virtual Network"
      }
    },
    "existingSubnetName": {
      "type": "string",
      "defaultValue": "POC-Subnet",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vnetID": "[resourceId(parameters('existingVNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('existingVNetName'))]",
    "SubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('existingSubnetName'))]",
    "LoginName": "loginserver",
    "LoginIPConfigName": "[concat(variables('loginName'), 'ipconfig')]",
    "NodeipConfigName": "[concat(parameters('ClusterPrefix'), 'ipconfig')]",
    "LoginNicName": "[concat(variables('loginName'), 'nic')]",
    "NodenicName": "[concat(parameters('ClusterPrefix'), 'nic')]",
    "publicIPAddressName": "[concat(variables('LoginName'), 'pip')]",
    "WekaNodeimageReference_stock": "[variables('Images')['CentOS-HPC_7.6']]",
    "WekaNodeimageReference_custom": {"id": "[resourceId(parameters('imageResourceGroup'), 'Microsoft.Compute/images', parameters('imageName'))]"},
    "WekaNodeimageReference": "[variables(concat('WekaNodeimageReference_',parameters('imageSelection')))]",
    "sshKeyPath": "[concat('/home/',parameters('adminUserName'),'/.ssh/authorized_keys')]",
    "Images": {
      "CentOS-HPC_7.6": {
        "publisher": "OpenLogic",
        "offer": "CentOS-HPC",
        "sku": "7.6",
        "version": "latest"
      }
    },
    "linuxConfiguration_sshPublicKey": {
      "disablePasswordAuthentication": "true",
      "ssh": {
        "publicKeys": [
          {
            "path": "[variables('sshKeyPath')]",
            "keyData": "[parameters('sshPublicKey')]"
          }
        ]
      }
    },
    "linuxConfiguration_password": { },
    "linuxConfiguration": "[variables(concat('linuxConfiguration_',parameters('authenticationType')))]",
    "vmScripts": {
      "scriptsToDownload": [
        "https://raw.githubusercontent.com/grandparoach/sandbox/weka/config.sh"
      ],
      "commandToExecute": "[concat('bash config.sh ', parameters('adminUserName'), ' ', parameters('adminPassword'), ' ', parameters('ClusterPrefix'), ' ', parameters('WekaNodeCount'))]"
    }
  },  
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('publicIPAddressName')]",
      "location": "[variables('location')]",
      "apiVersion": "2016-03-30",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('LoginNicName')]",
      "location": "[variables('location')]",
      "apiVersion": "2018-04-01",
      "dependsOn": [ 
        "[concat('Microsoft.Network/publicIPAddresses/', variables('publicIPAddressName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('LoginIPConfigName')]",
            "properties":  {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
              }, 
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('LoginName')]",
      "location": "[variables('location')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/', variables('LoginNicName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('LoginVMsku')]"
        },
        "osProfile": {
          "computerName": "[variables('LoginName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('WekaNodeimageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Standard_LRS"
             }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('LoginNicName'))]"
            }
          ]
        }
      }
    },
    {
        "type": "Microsoft.Compute/virtualMachineScaleSets",
        "name": "[parameters('ClusterPrefix')]",
        "location": "[variables('location')]",
        "apiVersion": "2017-12-01",
        "sku": {
          "name": "[parameters('WekaVMsku')]",
          "tier": "Standard",
          "capacity": "[parameters('WekaNodeCount')]"
        },
        "dependsOn": [ ],
        "properties": {
          "overprovision": "false",
          "upgradePolicy": {
            "mode": "Manual"
          },
          "virtualMachineProfile": {
            "networkProfile": {
              "networkInterfaceConfigurations": [
                {
                  "name": "[variables('NodenicName')]",
                  "properties": {
                    "primary": "true",
                    "ipConfigurations": [
                      {
                        "name": "[variables('NodeipConfigName')]",
                        "properties": {
                          "subnet": {
                              "id": "[variables('SubnetRef')]"
                          }
                        }
                      }
                    ]
                  }
                }
              ]
            },
            "osProfile": {
              "computerNamePrefix": "[parameters('clusterPrefix')]",
              "adminUsername": "[parameters('adminUserName')]",
              "adminPassword": "[parameters('adminPassword')]",
              "linuxConfiguration": "[variables('linuxConfiguration')]"
            },
            "storageProfile": {
              "osDisk": {
                  "createOption": "FromImage",
                  "caching": "ReadOnly",
                  "managedDisk": {
                      "storageAccountType": "Premium_LRS"
                  }
              },
              "imageReference": "[variables('WekaNodeimageReference')]", 
              "dataDisks": [
                  {
                      "lun": 0,
                      "createOption": "Empty",
                      "caching": "None",
                      "writeAcceleratorEnabled": false,
                      "managedDisk": {
                          "storageAccountType": "Premium_LRS"
                      },
                      "diskSizeGB": 1023
                  }
              ]
          },            
          "extensionProfile": {
            "extensions": [
              {
                "name": "PostInstallScript",
                "properties": {
                  "publisher": "Microsoft.Azure.Extensions",
                  "type": "CustomScript",
                  "typeHandlerVersion": "2.0",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "fileUris": "[variables('vmScripts').scriptsToDownload]",
                    "commandToExecute": "[variables('vmScripts').commandToExecute]"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ]
}
