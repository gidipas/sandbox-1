{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AvailabilityZone": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Availability Zone for deployment"
      }
    },
    "hostOs": {
      "type": "string",
      "defaultValue": "CentOS_7.6",
      "allowedValues": [
        "CentOS_7.6",  
        "RHEL_7.4",
        "RHEL_7.5"
      ],
      "metadata": {
        "description": "OS to install on the host system"
      }
    },
    "wekajumpbox": {
      "type": "string",
      "defaultValue": "Standard_D4s_v3",
      "allowedValues": [
        "Standard_D16s_v3",
        "Standard_D4s_v3"
      ],
      "metadata": {
        "description": "sku to use for the monitor VM for Web Administration"
      }
    },
    "scaleNumber": {
      "type": "int",
      "defaultValue": 6,
      "allowedValues": [
        4,
        6,
        8,
        12,
        16
      ],
      "metadata": {
        "description": "Number of nodes in the gluster file system"
      }
    },
    "existingVNetName": {
      "type": "string",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "existingVNetResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "name of Resource Group for existing Virtual Network"
      }
    },
    "existingSubnetName": {
      "type": "string",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "ssh user name"
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Authentication type for the virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Admin password for the virtual machines"
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH public key that will be included on all nodes. The OpenSSH public key can be generated with tools like ssh-keygen on Linux or OS X."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D16s_v3",
      "allowedValues": [
        "Standard_D2s_v3",
        "Standard_D4s_v3",
        "Standard_D8s_v3",
        "Standard_D16s_v3",
        "Standard_D32s_v3",
        "Standard_D64s_v3",
        "Standard_E2s_v3",
        "Standard_E4s_v3",
        "Standard_E8s_v3",
        "Standard_E16s_v3",
        "Standard_E32s_v3",
        "Standard_E64s_v3",
        "Standard_E64is_v3"
      ],
      "metadata": {
        "description": "sku to use for the gluster hosts"
      }
    },
    "vmNamePrefix": {
      "type": "string",
      "defaultValue": "wekahost",
      "metadata": {
        "description": "VM name prefix, a number will be appended for each node"
      }
    },
    "dataDiskSize": {
      "type": "int",
      "defaultValue": 2048,
      "allowedValues": [
        4,
        8,
        16,
        32,
        64,
        128,
        256,
        512,
        1024,
        2048,
        4095
      ],
      "metadata": {
        "description": "The size of the datadisks."
      }
    },
    "nbDataDisks": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of disks to attach to each server."
      }
    },
    "diskIOPSReadWrite": {
      "type": "int",
      "defaultValue": 80000,
      "metadata": {
            "description": "Data Disk IOPS value representing the maximum IOPS that the disk can achieve."
      }  
    },
    "diskMbpsReadWrite": {
      "type": "int",
      "defaultValue": 800,
      "metadata": {
            "description": "Data Disk MBps value representing the maximum throughput that the disk can achieve."
      }
    }
  },
  "variables": {
    "nicName": "nic",
    "DiagSAName": "[concat(uniqueString(subscription().id, resourceGroup().id), 'diag')]",
    "vnetID": "[resourceId(parameters('existingVNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('existingVNetName'))]",
    "SubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('existingSubnetName'))]",
    "imageReference": "[variables('computeImages')[parameters('hostOS')]]",
    "sshKeyPath": "[concat('/home/',parameters('adminUserName'),'/.ssh/authorized_keys')]",
    "linuxConfiguration_sshPublicKey": {
      "disablePasswordAuthentication": "true",
      "ssh": {
        "publicKeys": [
          {
            "path": "[variables('sshKeyPath')]",
            "keyData": "[parameters('sshPublicKey')]"
          }
        ]
      }
    },
    "linuxConfiguration_password": { },
    "linuxConfiguration": "[variables(concat('linuxConfiguration_',parameters('authenticationType')))]",

    "Scripts": {
        "scriptsToDownload": [
         "https://raw.githubusercontent.com/grandparoach/sandbox/ultraSSD/formatopt.sh" 
        ],
        "commandToExecute": "[concat('bash formatopt.sh ')]"
    },
    "GlusterWebAdminScripts": {
      "scriptsToDownload": [
        "https://raw.githubusercontent.com/grandparoach/gluster/Ultra/webadmin.sh" 
      ],
      "commandToExecute": "[concat('bash webadmin.sh ')]"
    },
    "computeImages": {
      "CentOS_7.6": {
          "publisher": "OpenLogic",
          "offer": "CentOS",
          "sku": "7.6",
          "version": "latest"
      },
      "RHEL_7.4": {
        "publisher": "Redhat",
        "offer": "RHEL",
        "sku": "7.4",
        "version": "latest"
      },
      "RHEL_7.5": {
        "publisher": "Redhat",
        "offer": "RHEL",
        "sku": "7-RAW",
        "version": "latest"
      }
    }
  },
  "resources": [
    {
        "name": "[concat(parameters('vmNamePrefix'),'-dataDisk',copyIndex(1))]",    
        "type": "Microsoft.Compute/disks",
        "apiVersion": "2018-06-01",
        "zones": "[parameters('AvailabilityZone')]",
        "location": "[resourceGroup().location]",
        "copy": {
            "name": "diskLoop",
            "count": "[parameters('scaleNumber')]"
          },
        "sku": {
            "name": "UltraSSD_LRS"
        },
        "properties": {
            "creationData": {
                "createOption": "Empty"
            },
            "diskSizeGB": "[parameters('dataDiskSize')]",
            "diskIOPSReadWrite": "[parameters('diskIOPSReadWrite')]",
            "diskMBpsReadWrite": "[parameters('diskMBpsReadWrite')]"
        }       
    },
    
    
    {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('DiagSAName')]",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "properties": {
          "accountType": "Standard_LRS"
        }
      },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "wekajumpbox-PublicIP",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-02-01",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      },
      "zones": "[parameters('AvailabilityZone')]"
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "wekajumpbox-nic",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-02-01",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/wekajumpbox-PublicIP')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "wekajumpbox-nic-ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses','wekajumpbox-PublicIP')]"
              }, 
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ],
        "enableAcceleratedNetworking": true
      }
    },    
    {
      "apiVersion": "2018-02-01",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('nicName'), copyindex(1))]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs",
        "count": "[parameters('scaleNumber')]"
      },
      "dependsOn": [
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ],
        "enableAcceleratedNetworking": true
      }
    },

    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "wekajumpbox",
      "zones": "[parameters('AvailabilityZone')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-06-01",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/wekajumpbox-nic')]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('wekajumpbox')]"
        },
        "osProfile": {
          "computerName": "wekajumpbox",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Premium_LRS"
             }
          },
          "dataDisks": [ ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces','wekajumpbox-nic')]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    
    {
      "apiVersion": "2018-06-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('vmNamePrefix'), copyindex(1))]",
      "zones": "[parameters('AvailabilityZone')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs",
        "count": "[parameters('scaleNumber')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'), copyindex(1))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]",
        "diskLoop"
      ],
      "properties": {  
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "additionalCapabilities" : {
            "ultraSSDEnabled" : "true"
        },
        "osProfile": {
          "computerName": "[concat(parameters('vmNamePrefix'), copyIndex(1))]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('imageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
            "managedDisk": {
                "storageAccountType": "Premium_LRS"
               }
            },

            "dataDisks": [
              {
                "name": "[concat(parameters('vmNamePrefix'),'-dataDisk',copyIndex(1))]",
                "lun": 0,
                "createOption": "attach",
                "managedDisk": {
                    "id": "[resourceId('Microsoft.Compute/disks/', concat(parameters('vmNamePrefix'),'-dataDisk',copyIndex(1)))]"
                }
              },
              {
                "lun": 1,
                "name": "[concat(parameters('vmNamePrefix'),'-optDisk',copyIndex(1))]",
                "createOption": "Empty",
                "caching": "None",
                "writeAcceleratorEnabled": false,
                "managedDisk": {
                    "storageAccountType": "Premium_LRS"
                   },
                "diskSizeGB": 200
              }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'), copyindex(1)))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmNamePrefix'), copyindex(1), '/extension')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "gfs-extention",
        "count": "[parameters('scaleNumber')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmNamePrefix'), copyindex(1))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
            "fileUris": "[variables('Scripts').scriptsToDownload]"
          },
          "protectedSettings": {
            "commandToExecute": "[concat('bash formatopt.sh')]"  
        }
      }
    }
  ]
}
